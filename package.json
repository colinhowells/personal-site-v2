{
	"name": "personal-site-v2",
	"version": "2.7.0",
	"description": "Colin Howells' personal website",
	"author": "Colin Howells",
	"private": true,
	"license": "UNLICENSED",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/colinhowells/personal-site-v2.git"
	},
	"type": "module",
	"engines": {
		"node": ">=22.x",
		"npm": ">=10.x"
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.5",
		"@sveltejs/kit": "^2.49.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@sveltejs/vite-plugin-svelte-inspector": "^5.0.2",
		"@types/node": "^25.0.9",
		"mdsvex": "^0.12.6",
		"prettier": "^3.8.0",
		"prettier-plugin-css-order": "^2.2.0",
		"prettier-plugin-svelte": "^3.4.1",
		"prism-themes": "^1.9.0",
		"resumed": "^6.1.0",
		"svelte": "^5.46.4",
		"svelte-check": "^4.3.5",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"valibot": "^1.2.0",
		"vite": "^7.3.1"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"cf-typegen": "wrangler types",
		"cf-preview-prod": "npm run cf-typegen && npm run build && wrangler dev",
		"cf-preview-staging": "npm run cf-typegen && npm run build && wrangler dev --env staging",
		"test:resume": "resumed validate ./src/lib/resume.json"
	}
}
